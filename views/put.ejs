<%- include('partials/_header')%>
    <!-- end header section -->


  <!-- catagory section -->

  <section class="catagory_section mb-4 mt-4">
    <div class="catagory_container">
      <div class="container ">
        <div class="heading_container heading_center">
          <h2>
            Müşteri Güncelle
          </h2> 
        </div>
      </div>
    </div>
  </section>
  <section class="contact_section">
    <div class="container">
      <div class="row">
        <div class="col-md-12 ">
          <form action="/customers/put" method="post">
            <input name="_id" value="<%=customer._id%>" type="hidden">
            <div>
              <input value="<%=customer.name%>" name="name" type="text" placeholder="Müşteri Adı" required/>
            </div>
            <div>
              <input value="<%=customer.price%>" name="price" type="number" placeholder="Price" required/>
            </div>
            <div class="btn-box">
              <button  onclick="return confirm('<%=customer.name%> Müşterisi Güncellenecek ')">
                Güncelle
              </button>
            </div>
            
          </form>
        </div>
        
        <div class="col-md-6">
          <div class="img-box">
            <img src="images/contact-img.png" alt="">
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="catagory_section mt-4 mb-4">
    <div class="catagory_container">
      <div class="container ">
        <div class="heading_container heading_center">
          <h2>
            İşler
          </h2>
        </div>
        
        <div class="row">

          <% for (let i=0; i< customerwork.length; i++) { %>
          <div style="border-bottom: 1px solid black;text-align: center;" class="col-sm-6 col-md-4 ">
          
            <div class="box ">
              <div class="img-box">
                <img src="/images/cat2.png" alt="">
              </div>
              <div class="detail-box">
                <h5>
                  <%=customerwork[i].name%>
                </h5>
                
              </div>

              <%if(!customerwork[i].cont){%>
              <a class="btn btn-success" href="/dashboard/customer/works/<%=works[i]._id%>-<%=customer._id%>">Ekle</a>
              <%}else{%>
                <a class="btn btn-warning" href="/dashboard/customer/works/cikart/<%=works[i]._id%>-<%=customer._id%>">Çıkart</a>
              <%}%>
            </div>
          </div>
        
          <% } %>

        </div>
        
      </div>
    </div>
  
  </section>

  <%- include('partials/_footer')%>